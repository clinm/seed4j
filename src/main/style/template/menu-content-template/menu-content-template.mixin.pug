include /atom/input/input-text/input-text.mixin.pug
include /atom/button/button-main/button-main.mixin.pug
include /molecule/field/field.mixin.pug
include /organism/side-menu/side-menu.mixin.pug
include /organism/vertical-space/vertical-space.mixin.pug

mixin seed4j-menu-content-template
  .seed4j-menu-content-template
    .seed4j-menu-content-template--content Content
    .seed4j-menu-content-template--menu
      +seed4j-side-menu
        +seed4j-side-menu--slot({ expand: true })
          +seed4j-vertical-space('paragraph')
            +seed4j-vertical-space--line
              +seed4j-field('First')
                +seed4j-input-text
            +seed4j-vertical-space--line
              +seed4j-field('Second')
                +seed4j-input-text
        +seed4j-side-menu--slot
          +seed4j-vertical-space('paragraph')
            +seed4j-vertical-space--line
              +seed4j-button-main({ block: true }) Button
            +seed4j-vertical-space--line
              +seed4j-button-main({ block: true }) Button
